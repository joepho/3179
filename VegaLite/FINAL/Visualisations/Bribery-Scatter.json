      },
      "y": {
        "field": "CPI_Score",
        "type": "quantitative",
        "scale": {"domain":[0,100]}
      },
      "color": {"field": "Region"},
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "CPI_Score", "type": "quantitative", "title": "CPI Score"},
