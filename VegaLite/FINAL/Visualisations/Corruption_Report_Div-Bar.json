{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"Population Proportion Likely to Report Corruption (negative values are unlikely to report)",
  "params": [
    {
      "name": "Region_Filter",
      "bind": {
        "input": "select",
        "options": [null, "AME", "AP", "ECA", "MENA", "WE/EU"],
        "labels": [
          "All",
          "Americas",
          "Asia Pacific",
          "Europe and Central Asia",
          "Middle East and North Africa",
          "Western Europe and European Union"
        ]
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/jpho0002/3179/main/VegaLite/FINAL/Data/GCB_Report_Rates.csv"
  },
  "transform": [
    {"filter": "Region_Filter == null || datum.Region == Region_Filter"},
    {"calculate": "datum.Agree == 2 ? 'Unlikely' : 'Likely'", "as": "Choice"},
    {
      "calculate": "datum.Agree == 2 ? -datum.Value : datum.Value",
      "as": "Value"
    }
  ],
  "width": 400,
  "height": 350,
  "mark": {"type": "bar", "tooltip": true},
  "encoding": {
    "y": {"field": "Country", "axis": null, "stack": "center"},
    "x": {
      "aggregate": "sum",
      "field": "Value",
      "title": "Value",
      "scale": {"domain": [-1, 1]}
    },
    "color": {
      "field": "Choice",
      "scale": {"range": ["#32a152", "#ca2a29"]}
    }
  },
  "config": {"view": {"stroke": null}, "axis": {"grid": false}}
}
